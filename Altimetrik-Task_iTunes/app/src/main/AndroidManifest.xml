<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.altimetrik.itunes_search">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.altimetrik.itunes_search.ItunesDiscoverApplication"
        android:allowBackup="false"
        android:icon="@mipmap/search"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:allowBackup"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name="com.altimetrik.itunes_search.view.ui.HistoryHandlerActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.altimetrik.itunes_search.view.ui.TrackDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.altimetrik.itunes_search.view.ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.altimetrik.itunes_search.view.ui.CartActivty"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>